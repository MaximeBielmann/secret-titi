<div class="container container-secret">
    <div class="row">
        <div class="col-md-2">
            
        </div>
        <div class="col-md-8">
            <%= form_with(url: "/whispers", method: "post") do |f| %>
              <div class="form-group">
                  <%= label_tag("Ecris ton secret") %>
                  <%= f.text_area :secret_content, class: "form-control" %>
              </div>
              <div class="form-group">
                  <%= submit_tag("Envoyer", class: "btn btn-primary") %>
              </div>
            <% end %>
        </div>
    </div>
</div>